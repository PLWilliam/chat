{% extends 'base.html.twig' %}

{% block title %}Friends index{% endblock %}

{% block body %}
    <h1>Friends index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Friend1</th>
                <th>Friend2</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for friend in friends %}
            <tr>
                <td>{{ friend.id }}</td>
                <td>{{ friend.friend1.email }}</td>
                <td>{{ friend.friend2.email }}</td>
                <td>{{ friend.friendsRequest.status }}</td>
                <td>
                    <a href="{{ path('app_friends_show', {'id': friend.id}) }}">show</a>
                    <a href="{{ path('app_friends_edit', {'id': friend.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_friends_new') }}">Create new</a>
{% endblock %}

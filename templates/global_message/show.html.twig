{% extends 'base.html.twig' %}

{% block title %}GlobalMessage{% endblock %}

{% block body %}
    <h1>GlobalMessage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ global_message.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ global_message.message }}</td>
            </tr>
            <tr>
                <th>SendAt</th>
                <td>{{ global_message.sendAt ? global_message.sendAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_global_message_index') }}">back to list</a>

    <a href="{{ path('app_global_message_edit', {'id': global_message.id}) }}">edit</a>

    {{ include('global_message/_delete_form.html.twig') }}
{% endblock %}
